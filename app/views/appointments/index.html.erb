<% if current_doctor %>
<body>
  <div class="card">
  <h3 id="greeting"><%= "Here's the current waiting list, Dr. #{current_doctor.name}" %></h3>
  </div>

  <div class="row">

    <div class="col s12 m4 l3" id="left">
      <div class="date">
          <div class="card">
            <%= DateTime.now.strftime("%m/%d/%Y %H:%M") %>
          </div>
      </div>

      <div class="edit">
        <div class="card">
          <div class="link"><%= link_to "View Waitlist",  appointments_path() %></div>
        </div>
      </div>

      <div class="edit">
        <div class="card">
          <div class="link">  <%= link_to "Edit Profile", edit_doctor_path(current_doctor) %>
          </div>
        </div>
      </div>
      <div class="logout">
        <div class="card">
          <div class="link"><%= link_to "Logout", root_path, method: :delete %></div>
        </div>
      </div>
      </div>

<div class="col s12 m8 l9" id="right">
  <table>
    <thead>
      <tr>
        <th>Patient Name</th>
        <th>Symptoms</th>
        <th>Blood Pressure</th>
        <th>Temperature</th>
        <th>Medications</th>
        <th>Appointment Status</th>
      </tr>
        <!-- <iframe src="https://tokbox.com/embed/embed/ot-embed.js?embedId=51e6171d-9d47-4c82-ae87-35a53a8c3a68&room=DEFAULT_ROOM&iframe=true" width="600px" height="500px" allow="microphone; camera" ></iframe> -->
    </thead>
    <tbody>
        <% @appointments.all.sort_by(&:created_at).each do |a| %>
        <% if a.doctor == nil %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.symptoms %></td>
        <td><%= a.blood_pressure %></td>
        <td><%= a.temperature %></td>
        <td><% a.medications %></td>
        <td><%= link_to "Accept Appointment", edit_appointment_path(a.id) %></td>
      <% end %>
      </tr>
      <% end %>
    </tbody>
  </thead>
  </table>
</div>

</div>
<!-- </div> -->

</body>
<div class="blue-grey-text">
</div>
<% end %>
<br>
